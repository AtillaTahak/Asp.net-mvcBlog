@model IEnumerable<blog.Models.Haber>

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/admin.cshtml";
}

<h2>Haber Listleri</h2>

<p>
    @Html.ActionLink("Yeni Haber Oluştur", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HaberBaslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HaberIcerik)
        </th>
        <th>
           Haber
        </th>
        <th>
            Haberin Resmi
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategori)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>
   
        <th>
            Haberin Kucuk Resmi
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HaberBaslik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HaberIcerik)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Haber1)
        </td>
        <td>
            <img src="@item.HaberResim" alt="Alternate Text" width="180" height="180" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Kategori)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tarih)
        </td>
     
        <td>
            <img src="@item.HaberResimK" alt="Alternate Text" width="180" height="180" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detaylar", "Details", new { id=item.id }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
